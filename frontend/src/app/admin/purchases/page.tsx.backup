const CATEGORIES: ProductCategory[] = [
	'frozen-products',
	'main-products',
	'desserts',
	'drinks',
	'packaging-materials',
	'cleaning-materials',
]

const PAYMENT_METHODS: PaymentMethod[] = [
	'cash',
	'bank-transfer',
	'credit-card',
	'debit-card',
	'check',
	'installments',
	'other',
]

const UNITS: ProductUnit[] = [
	'kg',
